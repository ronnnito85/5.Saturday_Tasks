n = input("Enter number: ")
n = int(n)

a = n % 10

b = n //10 % 10

c = n // 100

min_number = a
middle_number = b
max_number = c

print a, b, c

print min_number,'\n',max_number,'\n',middle_number,'\n'

if b < min_number:
    min_number = b
if c < min_number:
    min_number = c
    
print min_number, '\n'

if b > max_number:
    max_number = b
if a > max_number:
    max_number = a
print max_number,  '\n'

if a < max_number and a > min_number:
    middle_number = a
if c < max_number and c > min_number:
    middle_number = c
if  b < max_number and b > min_number:
    middle_number = b
print middle_number,  '\n'
    
print "Tne maximum number is:",max_number*100+middle_number*10+min_number
print "Tne minimum number is:",min_number*100+middle_number*10+max_number
